<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".eighth.EighthActivity"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:layout_weight="0"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/zoom_in_eight_act"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:src="@drawable/ic_zoom_in_black_24dp"
			/>

		<ImageView
			android:id="@+id/zoom_out_eight_act"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:src="@drawable/ic_zoom_out_black_24dp"
			/>

		<ImageView
			android:id="@+id/rotation_eight_act"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:src="@drawable/ic_forward_5_black_24dp"
			/>

		<ImageView
			android:id="@+id/paint_eight_act"
			android:layout_width="42dp"
			android:layout_height="42dp"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:src="@drawable/ic_format_paint_black_24dp"
			/>


	</LinearLayout>


	<LinearLayout
		android:id="@+id/pikachu_view"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="9"
		android:layout_gravity="center"
		android:orientation="horizontal"
		>
	</LinearLayout>

</LinearLayout>